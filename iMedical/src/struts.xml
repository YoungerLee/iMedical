<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<!-- 配置action的访问路径为.action的形式 -->
	<constant name="struts.action.extension" value="action"></constant>
	<!-- 配置struts的开发模式 -->
	<constant name="struts.devMode" value="true"></constant>
	<!-- 配置struts的简单模式 -->
	<constant name="struts.ui.theme" value="simple"></constant>
	<package name="young" namespace="/" extends="struts-default">
	    <!-- 普通用户首页登录 -->
	    <action name="user_*" class="com.young.iMedical.web.action.UserAction" method="{1}">
	    	<result name="login">
	    		/WEB-INF/jsp/userHome.jsp
	    	</result>
	    	<!-- 处理验证登录失败，跳转到index.jsp -->
	    	<result name="error">
	    		/userLogin.jsp
	    	</result>
	    </action>
	    <!-- 医生用户登录 -->
	    <action name="doctor_*" class="com.young.iMedical.web.action.DoctorAction" method="{1}">
	    	<result name="login">
	    		/WEB-INF/jsp/docHome.jsp
	    	</result>
	    	<!-- 处理验证登录失败，跳转到index.jsp -->
	    	<result name="error">
	    		/docLogin.jsp
	    	</result>
	    	<result name="home">
	    		/WEB-INF/jsp/docHome.jsp
	    	</result>
	    	<result name="medList">
	    		/WEB-INF/jsp/medList.jsp
	    	</result>
	    	<result name="addMed">
	    		/WEB-INF/jsp/addMed.jsp
	    	</result>
	    </action>
	    <action name="medicine_*" class="com.young.iMedical.web.action.MedicineAction" method="{1}">
	    	<result name="updateMed">
	    		/WEB-INF/jsp/updateMed.jsp
	    	</result>
	    	<result name="list">
	    		/WEB-INF/jsp/medList.jsp
	    	</result>
	    	<result name="error">
	    		/WEB-INF/jsp/error.jsp
	    	</result>
	    </action>
	</package>
</struts>
